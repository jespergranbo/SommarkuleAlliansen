@model SommarkuleAlliansen.Models.Email
@{
    ViewBag.Title = "Kontakt";
}
<style>
    .third-page {
        background-color: #46484B;
        border-radius: 5px;
    }
</style>
<meta name="viewport" content="width=device-width, initial-scale=1">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="Contactcontainer standardStyle">
        <div class="row">
            <div class="column">
                <h4>Kontaktformulär</h4>
                <p>
                    Om du vill komma i kontakt med oss på Sommarkulan så använd vidstående formulär för att skicka din fråga så kontaktar vi dig.
                </p>
            </div>
            <div id="textAlignment" class="column">
                <div class="form-group">
                    <b class="paddingLeft">Ditt namn</b>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FromName, new { @class = "form-control contact" })
                        @Html.ValidationMessageFor(m => m.FromName, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <b class="paddingLeft">Din Epostadress</b>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control contact" })
                        @Html.ValidationMessageFor(m => m.FromEmail, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <b class="paddingLeft">Ämne</b>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control contact" })
                        @Html.ValidationMessageFor(m => m.Subject, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <b class="paddingLeft">Meddelande</b>
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control contact" })
                        @Html.ValidationMessageFor(m => m.Message, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input id="send"type="submit" class="btn btn-outline-secondary" value="Skicka" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}