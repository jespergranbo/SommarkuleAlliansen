@model IEnumerable<SommarkuleAlliansen.Models.caretaker>

@{
    ViewBag.Title = "Caretaker";
}
<div style="border-style: solid; margin-top: 25px; background-color:white;">
    <table class="table">
        <tr>
            <th>
                Namn
            </th>
            <th>
                Nmr
            </th>
            <th>
                Epost
            </th>
            <th>
                Adress
            </th>
            <th>
                Kontaktperson
            </th>
            <th>
                Kontaktnmr
            </th>
            <th>
                Skuld
            </th>
            <td>Vårdnadshavare | @Html.ActionLink("Barn", "Child")</td>
            
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.caretaker_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.caretaker_number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.caretaker_email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.adress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.alternative_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.alternative_number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.debt):-
                </td>
                <td>
                    @Html.ActionLink("Visa mer", "Details", new { id = item.caretaker_id }) | @Html.ActionLink("Redigera", "Edit", new { id = item.caretaker_id })
                </td>
            </tr>
        }
    </table>
</div>