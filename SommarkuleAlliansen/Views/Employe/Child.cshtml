@model IEnumerable<SommarkuleAlliansen.Models.child>

@{
    ViewBag.Title = "Child";
}
<div  style="border-radius:5px; background-color:white; padding:10px; margin-top:5%;">
    <table class="table">
        <tr>
            <th style="border:none;">
                Namn
            </th>
            <th style="border:none;">
                Födelsedatum
            </th>
            <th style="border:none;">
                Tröjstorlek
            </th>
            <th style="border:none;">
                Förening
            </th>
            <th style="border:none;">
                Period
            </th>
            <th style="border:none;">
                Vårdnadshavare
            </th>
            <td style="border:none;">@Html.ActionLink("Vårdnadshavare", "Caretaker") | Barn</td>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @String.Format("{0:yyy/MM/dd}", item.birth_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.shirt_size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.location_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.weeks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.caretaker_name)
                </td>
                <td>
                    @Html.ActionLink("Visa mer", "DetailsChild", new { id=item.child_id }) |
                    @Html.ActionLink("Redigera", "EditChild", new { id=item.child_id })
                </td>
            </tr>
        }
    </table>
</div>
