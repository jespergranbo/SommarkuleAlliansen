@model SommarkuleAlliansen.Models.information

@{
    ViewBag.Title = "EditInformation";
}
<script src="~/Scripts/ckeditor/ckeditor.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div style="border-radius:5px; background-color:white; padding:10px; margin-top:5%; opacity: 0.9;">
    <div class="form-horizontal">
        <div class="form-group">
            <label style="padding-left:15px;">Titel</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.information_Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.information_Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="padding-left:15px;">Text</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.information_Text, new { @id = "FullDescription", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.information_Text, "", new { @class = "text-danger" })
            </div>
            <script>CKEDITOR.replace("FullDescription");</script>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
