@model IEnumerable<SommarkuleAlliansen.ViewModel.ChildGroupVM>

@{
    ViewBag.Title = "Gruppdetaljer";
}
<div style="border-radius:5px; background-color:white; padding:10px; margin-top:5%; opacity: 0.9;">
    <table class="table">
        <tr>
            <th style="border:none;">
                För- och Efternamn
            </th>
            <th style="border:none;">
                Kommentar
            </th>
            <th style="border:none;">
                Födelsedatum
            </th>
            <th style="border:none;">
                Närvaro
            </th>
            <th style="border:none;"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.comment)
                </td>
                <td>
                    @String.Format("{0:yyyy/MM/dd}", item.birth_date)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.present)
                </td>
                <td>@Html.ActionLink("Visa mer", "DetailsChild", new { id = item.child_id })</td>
            </tr>
        }

    </table>
</div>