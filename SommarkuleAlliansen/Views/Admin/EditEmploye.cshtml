@model IList<SommarkuleAlliansen.ViewModel.EmployeGroupLocationVM>

@{
    ViewBag.Title = "Redigera anställd";
    int lastIndex = Model.Count - 1;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="standardStyle">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group removeDisplay">
                @Html.LabelFor(model => Model.ElementAt(lastIndex).employe_id, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ElementAt(lastIndex).employe_id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ElementAt(lastIndex).employe_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="paddingLeft">Anställningstyp:</label>
                <div class="col-md-10">
                    <label><input class="form-radio-css" id="admincheck" type="radio" value="1" name="employe_type" required /> Admin</label>
                    <label><input class="form-radio-css" id="employecheck" type="radio" value="2" name="employe_type" required /> Ledare</label>
                </div>
            </div>

            <div class="form-group">
                <label class="paddingLeft">Namn:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ElementAt(lastIndex).name, new { htmlAttributes = new { @class = "form-control", @required = "requred" } })
                    @Html.ValidationMessageFor(model => model.ElementAt(lastIndex).name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="paddingLeft">Nummer (+46):</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ElementAt(lastIndex).number, new { htmlAttributes = new { @class = "form-control", @required = "requred" } })
                    @Html.ValidationMessageFor(model => model.ElementAt(lastIndex).number, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="paddingLeft">Epost:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ElementAt(lastIndex).email, new { htmlAttributes = new { @class = "form-control", @required = "requred" } })
                    @Html.ValidationMessageFor(model => model.ElementAt(lastIndex).email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="paddingLeft">Postnummer:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ElementAt(lastIndex).post_number, new { htmlAttributes = new { @class = "form-control", @maxlength = "5", @required = "requred" } })
                    @Html.ValidationMessageFor(model => model.ElementAt(lastIndex).post_number, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="paddingLeft">Adress:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ElementAt(lastIndex).adress, new { htmlAttributes = new { @class = "form-control", @required = "requred" } })
                    @Html.ValidationMessageFor(model => model.ElementAt(lastIndex).adress, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="paddingLeft">Lösenord:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ElementAt(lastIndex).password, new { htmlAttributes = new { @class = "form-control", @required = "requred" } })
                    @Html.ValidationMessageFor(model => model.ElementAt(lastIndex).password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="paddingLeft">Ledare för plats och årsgrupp:</label>
                <div class="col-md-10">
                    <select style="width: 100%;" id="locations" name="group_id">
                        @for (int i = 0; i < lastIndex; i++)
                        {
                            <option value="@Model.ElementAt(i).group_id">Plats: @Model.ElementAt(i).location_name. Årsgrupp: @Model.ElementAt(i).birth_year</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="paddingLeft">Skatta:</label>
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => Model.ElementAt(lastIndex).tax, new { htmlAttributes = new { @class = "form-radio-css", @name = "can_swim" } })
                        @Html.ValidationMessageFor(model => Model.ElementAt(lastIndex).tax, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="paddingLeft">Bank:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ElementAt(lastIndex).bank, new { htmlAttributes = new { @class = "form-control", @required = "requred" } })
                    @Html.ValidationMessageFor(model => model.ElementAt(lastIndex).bank, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="paddingLeft">Clearing:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ElementAt(lastIndex).clearing, new { htmlAttributes = new { @class = "form-control", @required = "requred" } })
                    @Html.ValidationMessageFor(model => model.ElementAt(lastIndex).clearing, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="paddingLeft">Banknummer:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ElementAt(lastIndex).account_number, new { htmlAttributes = new { @class = "form-control", @required = "requred" } })
                    @Html.ValidationMessageFor(model => model.ElementAt(lastIndex).account_number, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="paddingLeft">Tröjstorlek:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ElementAt(lastIndex).shirt_size, new { htmlAttributes = new { @class = "form-control", @required = "requred" } })
                    @Html.ValidationMessageFor(model => model.ElementAt(lastIndex).shirt_size, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="paddingLeft">Sista fyra i personnummer:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ElementAt(lastIndex).social_security, new { htmlAttributes = new { @class = "form-control", @maxlength = "4", @required = "requred" } })
                    @Html.ValidationMessageFor(model => model.ElementAt(lastIndex).social_security, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Spara" class="btn btn-outline-secondary" /> | <a class="removeMarginBottom">@Html.ActionLink("Ta bort", "DeleteEmploye", "Admin", new { id = Model.ElementAt(lastIndex).employe_id }, null)</a>
                </div>
            </div>
        </div>
    </div>
}

<script>
    window.onload = onPageLoad();

    function onPageLoad() {
        if (@Model.ElementAt(lastIndex).employe_type == 1) {
            document.getElementById("admincheck").checked = true;
        }
        else {
            document.getElementById("employecheck").checked = true;
        }
        document.getElementById("locations").value = @Model.ElementAt(lastIndex).group_id;
    }
</script>